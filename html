    <!-- Modal de Pagamento -->
    <div id="payment-modal" class="fixed inset-0 bg-gray-900 bg-opacity-75 flex items-center justify-center z-40 hidden">
        <div class="bg-gray-800 rounded-lg shadow-xl p-8 max-w-sm w-full">
            <h2 class="text-2xl font-bold text-amber-400 mb-4">Confirmar Pagamento</h2>
            <p class="mb-2 text-gray-300">Valor a pagar: <span id="modal-valor" class="font-bold text-xl"></span></p>
            <p class="mb-6 text-gray-300">Item: <span id="modal-item" class="font-bold"></span></p>
            
            <div class="grid grid-cols-2 gap-4 mb-6">
                <button data-method="Dinheiro" class="payment-method-btn bg-green-600 hover:bg-green-700 text-white font-bold py-3 rounded-lg"><i class="fas fa-money-bill-wave mr-2"></i>Dinheiro</button>
                <button data-method="Pix" class="payment-method-btn bg-cyan-500 hover:bg-cyan-600 text-white font-bold py-3 rounded-lg"><i class="fab fa-pix mr-2"></i>PIX</button>
                <button data-method="Cart√£o" class="payment-method-btn bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 rounded-lg"><i class="fas fa-credit-card mr-2"></i>Cart√£o</button>
                <button data-method="Pendente" class="payment-method-btn bg-red-600 hover:bg-red-700 text-white font-bold py-3 rounded-lg"><i class="fas fa-clock mr-2"></i>Pagar Depois</button>
            </div>

            <div id="pending-payment-div" class="hidden mb-4">
                <label for="nome-devedor" class="block text-sm font-medium text-gray-300">Nome de quem vai pagar</label>
                <input type="text" id="nome-devedor" class="mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-amber-500 focus:border-amber-500">
            </div>

            <div class="flex justify-end space-x-4">
                <button id="modal-cancel" class="px-4 py-2 bg-gray-600 hover:bg-gray-700 rounded-lg">Cancelar</button>
                <button id="modal-confirm" class="px-4 py-2 bg-amber-500 hover:bg-amber-600 text-gray-900 font-bold rounded-lg disabled:opacity-50" disabled>Confirmar</button>
            </div>
        </div>
    </div>


    <script type="module">
        // Importa√ß√µes do Firebase
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getFirestore, collection, addDoc, onSnapshot, doc, updateDoc, query, setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        import { getAuth, signInAnonymously, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";

        // --- Configura√ß√£o do Firebase ---
        // As vari√°veis __firebase_config e __app_id s√£o injetadas pelo ambiente.
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : { apiKey: "...", authDomain: "...", projectId: "...", storageBucket: "...", messagingSenderId: "...", appId: "..." };
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'cadeia-arraia-app-default';

        // Inicializa Firebase
        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);
        // setLogLevel('debug'); // Descomente para ver logs detalhados do Firestore

        // --- Vari√°veis Globais e Estado da Aplica√ß√£o ---
        let userId = null;
        let transacoes = [];
        let presosAtuais = [];
        let cronometros = {}; // Guarda os intervalos dos cron√¥metros: { id: intervalId }
        let transacaoPendente = null;
        let metodoPagamentoSelecionado = null;

        // --- Elementos do DOM ---
        const loadingOverlay = document.getElementById('loading-overlay');
        const tabLinks = document.querySelectorAll('.tab-link');
        const tabContents = document.querySelectorAll('.tab-content');
        const precoMinutoInput = document.getElementById('preco-minuto');
        const tempoPrisaoInput = document.getElementById('tempo-prisao');
        const valorPagoInput = document.getElementById('valor-pago');
        const nomePresoInput = document.getElementById('nome-preso');
        const quemMandouInput = document.getElementById('quem-mandou');
        const btnPrender = document.getElementById('btn-prender');
        const listaPresosDiv = document.getElementById('lista-presos');
        const precoBiribinhaInput = document.getElementById('preco-biribinha');
        const btnVenderBiribinha = document.getElementById('btn-vender-biribinha');
        const historicoBody = document.getElementById('historico-body');
        const paymentModal = document.getElementById('payment-modal');
        const modalCancelBtn = document.getElementById('modal-cancel');
        const modalConfirmBtn = document.getElementById('modal-confirm');
        const paymentMethodBtns = document.querySelectorAll('.payment-method-btn');
        const pendingPaymentDiv = document.getElementById('pending-payment-div');
        const nomeDevedorInput = document.getElementById('nome-devedor');

        // --- L√≥gica de Autentica√ß√£o e Inicializa√ß√£o ---
        onAuthStateChanged(auth, (user) => {
            if (user) {
                console.log("Usu√°rio autenticado:", user.uid);
                userId = user.uid;
                escutarTransacoes();
            } else {
                console.log("Nenhum usu√°rio. Tentando login an√¥nimo...");
                signInAnonymously(auth).catch((error) => {
                    console.error("Erro no login an√¥nimo:", error);
                    alert("N√£o foi poss√≠vel conectar ao servidor. Verifique sua conex√£o e tente recarregar a p√°gina.");
                });
            }
        });

        // --- L√≥gica de Navega√ß√£o por Abas ---
        tabLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const targetId = link.id.replace('link', 'content');
                
                tabLinks.forEach(l => l.classList.remove('active'));
                tabContents.forEach(c => c.classList.remove('active'));

                link.classList.add('active');
                document.getElementById(targetId).classList.add('active');
            });
        });

        // --- L√≥gica do Ponto de Venda (Cadeia) ---
        function atualizarValoresCadeia(origem) {
            const precoPorMinuto = parseFloat(precoMinutoInput.value) || 0;
            if (precoPorMinuto <= 0) return;

            if (origem === 'tempo') {
                const tempo = parseFloat(tempoPrisaoInput.value) || 0;
                valorPagoInput.value = (tempo * precoPorMinuto).toFixed(2);
            } else if (origem === 'valor') {
                const valor = parseFloat(valorPagoInput.value) || 0;
                tempoPrisaoInput.value = (valor / precoPorMinuto).toFixed(2);
            }
        }

        tempoPrisaoInput.addEventListener('input', () => atualizarValoresCadeia('tempo'));
        valorPagoInput.addEventListener('input', () => atualizarValoresCadeia('valor'));
        precoMinutoInput.addEventListener('input', () => atualizarValoresCadeia('tempo'));

        btnPrender.addEventListener('click', () => {
            const nomePreso = nomePresoInput.value.trim();
            const quemMandou = quemMandouInput.value.trim();
            const tempo = parseFloat(tempoPrisaoInput.value) || 0;
            const valor = parseFloat(valorPagoInput.value) || 0;

            if (!nomePreso || !quemMandou || valor <= 0) {
                alert("Preencha o nome do preso, quem mandou e um valor/tempo v√°lido!");
                return;
            }

            transacaoPendente = {
                type: 'cadeia',
                preso: nomePreso,
                mandou: quemMandou,
                tempo: tempo,
                valor: valor,
                timestamp: new Date()
            };

            abrirModalPagamento();
        });

        // --- L√≥gica de Vendas (Biribinha) ---
        btnVenderBiribinha.addEventListener('click', () => {
            const preco = parseFloat(precoBiribinhaInput.value) || 0;
             if (preco <= 0) {
                alert("O pre√ßo da biribinha deve ser maior que zero!");
                return;
            }
            transacaoPendente = {
                type: 'biribinha',
                valor: preco,
                timestamp: new Date()
            };
            abrirModalPagamento();
        });


        // --- L√≥gica do Modal de Pagamento ---
        function abrirModalPagamento() {
            if (!transacaoPendente) return;
            
            document.getElementById('modal-valor').textContent = `R$ ${transacaoPendente.valor.toFixed(2)}`;
            document.getElementById('modal-item').textContent = transacaoPendente.type === 'cadeia' ? `Pris√£o de ${transacaoPendente.preso}` : 'Biribinha';
            
            // Reset modal state
            metodoPagamentoSelecionado = null;
            paymentMethodBtns.forEach(btn => btn.classList.remove('ring-2', 'ring-offset-2', 'ring-amber-500'));
            pendingPaymentDiv.classList.add('hidden');
            nomeDevedorInput.value = '';
            modalConfirmBtn.disabled = true;

            paymentModal.classList.remove('hidden');
        }

        paymentMethodBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                metodoPagamentoSelecionado = btn.dataset.method;
                paymentMethodBtns.forEach(b => b.classList.remove('ring-2', 'ring-offset-2', 'ring-amber-500'));
                btn.classList.add('ring-2', 'ring-offset-2', 'ring-amber-500');
                
                if (metodoPagamentoSelecionado === 'Pendente') {
                    pendingPaymentDiv.classList.remove('hidden');
                    modalConfirmBtn.disabled = nomeDevedorInput.value.trim() === '';
                } else {
                    pendingPaymentDiv.classList.add('hidden');
                    modalConfirmBtn.disabled = false;
                }
            });
        });

        nomeDevedorInput.addEventListener('input', () => {
            if (metodoPagamentoSelecionado === 'Pendente') {
                 modalConfirmBtn.disabled = nomeDevedorInput.value.trim() === '';
            }
        });

        modalCancelBtn.addEventListener('click', () => {
            paymentModal.classList.add('hidden');
            transacaoPendente = null;
        });

        modalConfirmBtn.addEventListener('click', async () => {
            if (!transacaoPendente || !metodoPagamentoSelecionado) return;

            transacaoPendente.metodoPagamento = metodoPagamentoSelecionado;
            transacaoPendente.statusPagamento = 'pago';

            if (metodoPagamentoSelecionado === 'Pendente') {
                const nomeDevedor = nomeDevedorInput.value.trim();
                if (!nomeDevedor) {
                    alert('Por favor, insira o nome de quem vai pagar.');
                    return;
                }
                transacaoPendente.statusPagamento = 'pendente';
                transacaoPendente.nomePendente = nomeDevedor;
            }
            
            await salvarTransacao(transacaoPendente);

            // Limpar formul√°rio da cadeia se for o caso
            if (transacaoPendente.type === 'cadeia') {
                nomePresoInput.value = '';
                quemMandouInput.value = '';
                tempoPrisaoInput.value = '';
                valorPagoInput.value = '';
            }

            paymentModal.classList.add('hidden');
            transacaoPendente = null;
        });


        // --- Fun√ß√µes de Banco de Dados (Firestore) ---
        async function salvarTransacao(transacao) {
            if (!userId) {
                alert("Erro de autentica√ß√£o. N√£o √© poss√≠vel salvar.");
                return;
            }
            try {
                const collectionRef = collection(db, `artifacts/${appId}/users/${userId}/transactions`);
                await addDoc(collectionRef, transacao);
                console.log("Transa√ß√£o salva com sucesso!");
            } catch (error) {
                console.error("Erro ao salvar transa√ß√£o: ", error);
                alert("Ocorreu um erro ao salvar. Tente novamente.");
            }
        }

        function escutarTransacoes() {
            if (!userId) return;
            const collectionRef = collection(db, `artifacts/${appId}/users/${userId}/transactions`);
            const q = query(collectionRef); // Poderia adicionar orderBy, mas faremos no cliente para evitar √≠ndices

            onSnapshot(q, (snapshot) => {
                loadingOverlay.classList.add('hidden');
                transacoes = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
                // Ordenar por data mais recente
                transacoes.sort((a, b) => b.timestamp.toDate() - a.timestamp.toDate());
                
                processarTransacoes();
            }, (error) => {
                console.error("Erro ao escutar transa√ß√µes:", error);
                loadingOverlay.classList.add('hidden');
                alert("N√£o foi poss√≠vel carregar os dados. Verifique a conex√£o.");
            });
        }
        
        async function marcarComoPago(transacaoId) {
            if (!userId) return;
            try {
                const docRef = doc(db, `artifacts/${appId}/users/${userId}/transactions`, transacaoId);
                await updateDoc(docRef, {
                    statusPagamento: 'pago',
                    metodoPagamento: 'Dinheiro' // Assume pagamento em dinheiro ao quitar
                });
                console.log(`Transa√ß√£o ${transacaoId} marcada como paga.`);
            } catch (error) {
                console.error("Erro ao atualizar transa√ß√£o:", error);
            }
        }

        // --- L√≥gica de Renderiza√ß√£o e Processamento ---
        function processarTransacoes() {
            // Reinicia os cron√¥metros apenas para as pris√µes pagas e n√£o expiradas
            presosAtuais = transacoes.filter(t => {
                if (t.type !== 'cadeia' || t.statusPagamento !== 'pago') return false;
                const tempoTotalSegundos = t.tempo * 60;
                const agora = new Date();
                const dataPrisao = t.timestamp.toDate();
                const dataFim = new Date(dataPrisao.getTime() + tempoTotalSegundos * 1000);
                return agora < dataFim; // S√≥ considera se o tempo ainda n√£o acabou
            });
            
            renderizarPresosAtuais();
            renderizarHistorico();
            renderizarDashboard();
        }

        function renderizarPresosAtuais() {
            listaPresosDiv.innerHTML = '';

            if (presosAtuais.length === 0) {
                listaPresosDiv.innerHTML = '<p class="text-gray-400">Ningu√©m na cadeia. Por enquanto...</p>';
                return;
            }

            presosAtuais.forEach(preso => {
                const tempoTotalSegundos = preso.tempo * 60;
                const agora = new Date().getTime();
                const dataPrisao = preso.timestamp.toDate().getTime();
                const dataFim = dataPrisao + tempoTotalSegundos * 1000;
                let segundosRestantes = Math.round((dataFim - agora) / 1000);

                const presoDiv = document.createElement('div');
                presoDiv.className = 'bg-gray-700 p-4 rounded-lg flex items-center justify-between';
                presoDiv.id = `preso-${preso.id}`;

                presoDiv.innerHTML = `
                    <div>
                        <p class="font-bold text-lg text-white">${preso.preso}</p>
                        <p class="text-sm text-gray-400">Mandado por: ${preso.mandou}</p>
                    </div>
                    <div class="text-right">
                        <p id="timer-${preso.id}" class="text-2xl font-mono font-bold text-amber-400 animate-pulse-fast">--:--</p>
                        <button data-id="${preso.id}" class="release-btn text-xs text-red-400 hover:text-red-300">Soltar</button>
                    </div>
                `;
                listaPresosDiv.appendChild(presoDiv);
                
                // Limpa cron√¥metro antigo se existir
                if (cronometros[preso.id]) {
                    clearInterval(cronometros[preso.id]);
                }

                // Inicia novo cron√¥metro
                const timerElement = document.getElementById(`timer-${preso.id}`);
                cronometros[preso.id] = setInterval(() => {
                    segundosRestantes--;
                    if (segundosRestantes >= 0) {
                        const minutos = Math.floor(segundosRestantes / 60);
                        const segundos = segundosRestantes % 60;
                        timerElement.textContent = `${String(minutos).padStart(2, '0')}:${String(segundos).padStart(2, '0')}`;
                    } else {
                        clearInterval(cronometros[preso.id]);
                        delete cronometros[preso.id];
                        const presoDivFinalizado = document.getElementById(`preso-${preso.id}`);
                        if(presoDivFinalizado) {
                            presoDivFinalizado.classList.remove('bg-gray-700');
                            presoDivFinalizado.classList.add('bg-green-800');
                            timerElement.textContent = 'LIVRE!';
                            timerElement.classList.remove('text-amber-400', 'animate-pulse-fast');
                            timerElement.classList.add('text-green-400');
                        }
                    }
                }, 1000);
            });
            
            // Adicionar event listener para os novos bot√µes de soltar
            document.querySelectorAll('.release-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const id = e.target.dataset.id;
                    if (cronometros[id]) {
                        clearInterval(cronometros[id]);
                        delete cronometros[id];
                    }
                     const presoDivFinalizado = document.getElementById(`preso-${id}`);
                     if(presoDivFinalizado) {
                        presoDivFinalizado.remove();
                        // Checa se a lista ficou vazia
                        if (listaPresosDiv.children.length === 0) {
                           listaPresosDiv.innerHTML = '<p class="text-gray-400">Ningu√©m na cadeia. Por enquanto...</p>';
                        }
                     }
                });
            });
        }

        function renderizarHistorico() {
            historicoBody.innerHTML = '';
            if (transacoes.length === 0) {
                historicoBody.innerHTML = '<tr><td colspan="5" class="text-center py-4 text-gray-400">Nenhuma transa√ß√£o ainda.</td></tr>';
                return;
            }

            transacoes.forEach(t => {
                const tr = document.createElement('tr');
                tr.className = 'bg-gray-800 border-b border-gray-700';
                
                let tipoIcon = t.type === 'cadeia' ? '<i class="fas fa-handcuffs text-amber-400"></i>' : '<i class="fas fa-bomb text-blue-400"></i>';
                let detalhes = t.type === 'cadeia' ? `<b>${t.preso}</b> (por ${t.mandou})` : 'Venda de Biribinha';
                let statusClass = t.statusPagamento === 'pago' ? 'text-green-400' : 'text-red-400';
                let pagamentoInfo = t.statusPagamento === 'pago' ? t.metodoPagamento : `Pendente (${t.nomePendente})`;

                tr.innerHTML = `
                    <td class="px-6 py-4">${tipoIcon}</td>
                    <td class="px-6 py-4">${detalhes}</td>
                    <td class="px-6 py-4 font-bold">R$ ${t.valor.toFixed(2)}</td>
                    <td class="px-6 py-4"><span class="${statusClass} font-semibold">${pagamentoInfo}</span></td>
                    <td class="px-6 py-4">
                        ${t.statusPagamento === 'pendente' ? `<button data-id="${t.id}" class="pay-btn bg-green-600 hover:bg-green-700 text-white text-xs font-bold py-1 px-2 rounded">Quitar</button>` : '-'}
                    </td>
                `;
                historicoBody.appendChild(tr);
            });
            
            document.querySelectorAll('.pay-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const id = e.target.dataset.id;
                    if (confirm('Deseja quitar esta d√≠vida? O pagamento ser√° registrado como Dinheiro.')) {
                        marcarComoPago(id);
                    }
                });
            });
        }
        
        function renderizarDashboard() {
            let faturamentoTotal = 0;
            let totalPendente = 0;
            let numPrisoes = 0;
            let numBiribinhas = 0;
            let receitaDinheiro = 0;
            let receitaPix = 0;
            let receitaCartao = 0;
            
            transacoes.forEach(t => {
                if (t.statusPagamento === 'pago') {
                    faturamentoTotal += t.valor;
                    if (t.metodoPagamento === 'Dinheiro') receitaDinheiro += t.valor;
                    if (t.metodoPagamento === 'Pix') receitaPix += t.valor;
                    if (t.metodoPagamento === 'Cart√£o') receitaCartao += t.valor;
                } else {
                    totalPendente += t.valor;
                }

                if (t.type === 'cadeia') numPrisoes++;
                if (t.type === 'biribinha') numBiribinhas++;
            });

            document.getElementById('kpi-total').textContent = `R$ ${faturamentoTotal.toFixed(2)}`;
            document.getElementById('kpi-pendente').textContent = `R$ ${totalPendente.toFixed(2)}`;
            document.getElementById('kpi-prisoes').textContent = numPrisoes;
            document.getElementById('kpi-biribinhas').textContent = numBiribinhas;
            document.getElementById('kpi-dinheiro').textContent = `R$ ${receitaDinheiro.toFixed(2)}`;
            document.getElementById('kpi-pix').textContent = `R$ ${receitaPix.toFixed(2)}`;
            document.getElementById('kpi-cartao').textContent = `R$ ${receitaCartao.toFixed(2)}`;
        }

    </script>
</body>
</html>
